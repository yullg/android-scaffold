<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CanvasView">
        <attr name="yg_cvPaintAlpha" format="integer" />
        <attr name="yg_cvPaintAntiAlias" format="boolean" />
        <attr name="yg_cvPaintColor" format="color|reference" />
        <attr name="yg_cvPaintDither" format="boolean" />
        <attr name="yg_cvPaintFilterBitmap" format="boolean" />
        <attr name="yg_cvPaintHinting" format="enum">
            <enum name="off" value="0" />
            <enum name="on" value="1" />
        </attr>
        <attr name="yg_cvPaintStrokeCap" format="enum">
            <enum name="butt" value="1" />
            <enum name="round" value="2" />
            <enum name="square" value="3" />
        </attr>
        <attr name="yg_cvPaintStrokeJoin" format="enum">
            <enum name="bevel" value="1" />
            <enum name="miter" value="2" />
            <enum name="round" value="3" />
        </attr>
        <attr name="yg_cvPaintStrokeMiter" format="dimension" />
        <attr name="yg_cvPaintStrokeWidth" format="dimension" />
        <attr name="yg_cvPaintStyle" format="enum">
            <enum name="fill" value="1" />
            <enum name="stroke" value="2" />
            <enum name="fill_and_stroke" value="3" />
        </attr>
        <attr name="yg_cvReverseMode" format="flags">
            <flag name="none" value="0" />
            <flag name="horizontal" value="1" />
            <flag name="vertical" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArcCanvasView">
        <attr name="yg_arcStartAngle" format="float" />
        <attr name="yg_arcSweepAngle" format="float" />
        <attr name="yg_arcUseCenter" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RectCanvasView">
        <attr name="yg_rectXRadius" format="dimension" />
        <attr name="yg_rectYRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SimpleCardWidget">
        <attr name="yg_cardAlpha" format="integer" />
        <attr name="yg_cardElevation" format="dimension" />
        <attr name="yg_cardFillColor" format="color|reference" />
        <attr name="yg_cardShadowColor" format="color|reference" />
        <attr name="yg_cardStrokeColor" format="color|reference" />
        <attr name="yg_cardStrokeWidth" format="dimension" />
        <attr name="yg_cardCornerFamily" format="enum">
            <enum name="rounded" value="1" />
            <enum name="cut" value="2" />
        </attr>
        <attr name="yg_cardCornerSize" format="dimension" />
        <attr name="yg_cardTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="1" />
            <enum name="cut" value="2" />
        </attr>
        <attr name="yg_cardTopLeftCornerSize" format="dimension" />
        <attr name="yg_cardTopRightCornerFamily" format="enum">
            <enum name="rounded" value="1" />
            <enum name="cut" value="2" />
        </attr>
        <attr name="yg_cardTopRightCornerSize" format="dimension" />
        <attr name="yg_cardBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="1" />
            <enum name="cut" value="2" />
        </attr>
        <attr name="yg_cardBottomLeftCornerSize" format="dimension" />
        <attr name="yg_cardBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="1" />
            <enum name="cut" value="2" />
        </attr>
        <attr name="yg_cardBottomRightCornerSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SafeAreaWidget">
        <attr name="yg_saConsumeInsets" format="boolean" />
        <attr name="yg_saIgnoringVisibility" format="boolean" />
        <attr name="yg_saApplyMode" format="enum">
            <enum name="margin" value="1" />
            <enum name="padding" value="2" />
        </attr>
        <attr name="yg_saInsetsType" format="flags">
            <flag name="caption_bar" value="1" />
            <flag name="display_cutout" value="2" />
            <flag name="ime" value="4" />
            <flag name="mandatory_system_gestures" value="8" />
            <flag name="navigation_bars" value="16" />
            <flag name="status_bars" value="32" />
            <flag name="system_bars" value="64" />
            <flag name="system_gestures" value="128" />
            <flag name="tappable_element" value="256" />
        </attr>
    </declare-styleable>

</resources>